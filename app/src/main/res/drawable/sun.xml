<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:gravity="center"
        android:width="80dp"
        android:height="80dp"
        >

        <shape
            android:shape="oval"
            >

            <solid android:color="@color/bright_sun" />

        </shape>
    </item>

    <item
        android:width="100dp"
        android:height="100dp"
        >

        <shape
            android:shape="oval"
            >

            <stroke
                android:width="8dp"
                android:dashGap="4dp"
                android:color="@color/bright_sun"
                android:dashWidth="8px"/>

        </shape>
    </item>

</layer-list>